# Flask/Runtime
FLASK_ENV=development
REACT_APP_NODE_ENV=development
SECRET_KEY=dev-secret-change-me

# CORS
# Frontend origin allowed to call backend APIs (set to your UI URL)
FRONTEND_ORIGIN=http://localhost:3000

# Database
# Use SQLite (default) if DATABASE_URL is empty; else specify Postgres URL:
# DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname
DATABASE_URL=

# Mocks and execution behavior
# USE_LLM_MOCK=true => use mock LLM responses (maps to MOCK_LLM)
USE_LLM_MOCK=true
# EXECUTION_MODE can be "mock" or "real"; "mock" maps to MOCK_EXECUTION=true
EXECUTION_MODE=mock
# AUTH_DISABLED=true disables auth checks for development
AUTH_DISABLED=true
